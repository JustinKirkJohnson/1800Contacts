<div class="jumbotron">
	<h1>ScheduleTron</h1>
	<p class="lead">Manage your class prerequisites</p>
</div>

<div ng-controller="ClassScheduleController">

	<div data-ng-show="showSuccess" class="alert alert-success" role="alert">
		<span class="glyphicon glyphicon-star" aria-hidden="true"></span>
		<strong>Success</strong>
	</div>

	<div data-ng-show="showError" class="alert alert-danger" role="alert">
		<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
		{{errorMessage}}
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Class Sorter - Add a list of classes and prerquisites to the box on the left and click the button with the arrow to sort.</h3>
		</div>
		<div class="panel-body">
			<div class="col-md-6">
				<textarea class="form-control" rows="8" id="input" style="max-width:100%;" ng-model="classList"></textarea>
			</div>
			<div class="col-md-1">
				<button type="button" class="btn btn-default btn-lg" ng-click="processClasses('#input')">
					<span class="glyphicon glyphicon-arrow-right" aria-hidden="true"></span>
				</button>
			</div>
			<div class="col-md-5">
				<textarea class="form-control" rows="8" id="output" style="max-width:100%;" ng-model="sortedClasses"></textarea>
			</div>

		</div>
	</div>

</div>

@Scripts.Render("~/bundles/classSchedule")

